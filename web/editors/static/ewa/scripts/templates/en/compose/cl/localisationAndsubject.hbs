
<dt class="label"></dt>
{{#emptyObjects "2" 0=SkillsPassport.CoverLetter.Letter.Localisation 1=SkillsPassport.CoverLetter.Letter.SubjectLine}}
{{else}}
	{{#call_partial . path="" section="CoverLetter.Letter.SubjectLine SkillsPassport.CoverLetter.Letter.Localisation"  view="CL:SubjectLineLocalisation" name="CL:SubjectLineLocalisation" form="SubjectLineLocalisation" }}
		{{> templates/menu/itemmenu}}
	{{/call_partial}}
{{/emptyObjects}}
<dd>
		
			
<div class="value Localisation
		left-align
		
		
">
<span {{#unless SkillsPassport.CoverLetter.Letter.Localisation}}class="default-value"{{/unless}}>

	{{#unless SkillsPassport.CoverLetter.Letter.Localisation}}
		City, Date
	{{else}}
		{{#if SkillsPassport.CoverLetter.Letter.Localisation.Place.Municipality}}
			{{SkillsPassport.CoverLetter.Letter.Localisation.Place.Municipality}}
				{{#if SkillsPassport.CoverLetter.Letter.Localisation.Date}}
